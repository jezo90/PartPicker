<!DOCTYPE html>
@using PartPicker.Infrastructure
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="@Url.Content("~/Scripts/JavaScript2.js")"></script>
</head>
<body>

    <div class="top-nav" id="top-nav">
        <a href="#home">Hello Guest!</a>

        <a href="#news">Obudowy</a>
        <a href="#news">Dyski Twarde</a>
        <a href="#news">Zasilacze</a>
        <a href="#news">Pamięć RAM</a>
        <a href="#news">Płyty główne</a>
        <a href="#news">Karty graficzne</a>
        <a href="#news">Procesory</a>
        <a href="#contact">Buildy</a>
        <a href="#register">Zarejestruj</a>
        <a href="#contact">Zaloguj</a>
        <a><input type="text" name="password" placeholder="Password"></a>
        <a><input type="text" name="login" placeholder="Login"></a>

        <a class="icon" onclick="myFunction()">+</a>
    </div>

    <div class="bar">    </div>

    <!-- Main -->

    <div class="main">

        <!-- Banner -->

        <div class="banner">
            <img src="@Url.BanersImagesPath()" class="banner-img" />
        </div>


        <div>
            @RenderBody()
        </div>

    </div>

    <footer>
        <div class="footer-list">
            <div class="footer-part">
                <ul>
                    <li>@Html.ActionLink("Contact", "Static", "Home", new { name = "Contact" }, null)</li>
                    <li>@Html.ActionLink("About", "Static", "Home", new { name = "About" }, null)</li>
                </ul>
            </div>
            <div class="footer-part">
                <ul>
                    <li><a href="#">Facebook</a></li>
                    <li><a href="#">Twitter</a></li>
                </ul>
            </div>
            <div class="footer-part">
                <ul>
                    <li>Copyright &copy; 2019</li>
                    <li>K. Jeżowski, A. Jarszak</li>
                </ul>
            </div>
        </div>
    </footer>

    <div>
        @RenderSection("Scripts", required: false)
    </div>

</body>
</html>
