@model PartPicker.ViewModels.NewBuildViewModel
@using PartPicker.Infrastructure
@{
    ViewBag.Title = "Nowa konfiguracja";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
Procesor:
@if (@Model.Cpu != null)
{
    <img class="" src="@Url.CpusImagesPath(Model.Cpu.Image)" />
    @Model.Cpu.Name
    <a href="@Url.Action("DeleteCpuFromBuild", "NewBuild")">
        <img class="newbuild-add" src="@Url.ImagesPath("delete.png")" />
    </a>
}
else
{
    <a href="@Url.Action("AddCpuToBuild", "NewBuild", new { id = 1 })">
